<div class= "vh-100 w-100 d-flex flex-column justify-content-center align-items-center" >
  <h1>Log in</h1>
  <div class= "w-75  align-middle" >
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-floating mt-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        <%= f.label :email, class: "form-label" %><br />
      </div>

      <div class="field form-floating">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        <%= f.label :password, class: "form-label" %><br />
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "form-label" %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-primary mt-2 mb-2 w-100" %>
      </div>
    <% end %>
  </div>
  <%= render "devise/shared/links" %>
</div>
