<div class="vh-100 d-flex flex-column bg-secondary bg-opacity-10">
  <div class="navbar d-flex align-items-center bg-primary-main">
    <%= link_to groups_path, class: "btn" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-arrow-left text-light" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
      </svg>
    <% end %>
    <p class="navbar-brand m-0 text-light position-absolute top-50 start-50 translate-middle">EXPENSES</p>
  </div>
  <div class="p-2 py-3 bg-white rounded">
    <p class="d-flex align-items-center m-0">
      Total Amount:
      <strong class="ms-auto">$<%=@total %></strong>
    </p>
  </div>
  <div id="expenses">
    <div id="purchases" class="d-flex flex-column align-items-center">
      <% @expenses.each do |purchase| %>
        <div id="<%= dom_id purchase %>" class="d-flex bg-white p-2 my-2 w-90">
          <div>
            <p class="m-0">
              <strong>Name:</strong>
              <%= purchase.name %>
            </p>
            <p class="m-0">
              <strong>Amount:</strong>
              $
              <%= purchase.amount %>
            </p>
          </div>
          <div class="dropdown ms-auto">
            <div class="mt-2" data-bs-toggle="dropdown" aria-expanded="false">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
                <path d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
              </svg>
            </div>
            <ul class="dropdown-menu">
              <li class="dropdown-item">
                <%= link_to 'Edit', edit_group_expense_path(@group, purchase) , class: "text-decoration-none text-secondary" %>
              </li>
              <div class="dropdown-divider"></div>
              <li class="dropdown-item text-danger">
                <%= button_to 'Delete', group_expense_path(@group, purchase), method: :delete, data: { turbo: false }, class: "text-decoration-none text-secondary p-0 bg-transparent border-none" %>
              </li>
            </ul>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="w-100 bg-second p-3 mt-auto">
    <%= link_to "NEW PURCHASE",
			new_group_expense_path,
      class: "w-100 p-3 btn btn-success"
    %>
  </div>
</div>
